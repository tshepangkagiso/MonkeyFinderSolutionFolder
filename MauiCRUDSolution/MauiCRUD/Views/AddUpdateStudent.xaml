<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCRUD.Views.AddUpdateStudent"
             xmlns:viewmodel="clr-namespace:MauiCRUD.ViewModels"
             x:DataType="viewmodel:AddUpdateStudentViewModel"
             Title="Add Update A Student">
    
    
    <StackLayout Padding="10" Margin="10">
        <Label Text="First Name:" FontSize="16"/>
        <Entry Text="{Binding StudentDetail.FirstName}" x:Name="firstNameEntry" Placeholder="First Name..."/>
        <BoxView HeightRequest="0.8" Color="Gray" Margin="0,0,0,50"/>

        <Label Text="Last Name:" FontSize="16"/>
        <Entry Text="{Binding StudentDetail.LastName}" x:Name="lastNameEntry" Placeholder="Last Name..."/>
        <BoxView HeightRequest="0.8" Color="Gray" Margin="0,0,0,50"/>

        <Label Text="Email:" FontSize="16"/>
        <Entry Text="{Binding StudentDetail.Email}"  x:Name="emailEntry" Placeholder="Email..."/>
        <BoxView HeightRequest="0.8" Color="Gray" Margin="0,0,0,50"/>

        <Button Text="Save" HorizontalOptions="Center" 
                VerticalOptions="Center" WidthRequest="100" 
                HeightRequest="50" Command="{Binding AddStudentCommand}"/>

    </StackLayout>
</ContentPage>